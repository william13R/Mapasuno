<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MarravillaAntigua.Menumarravillaantigua"
    tools:showIn="@layout/activity_menumarravillaantigua">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="428dp"
                android:layout_marginTop="69.5dp"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnartenisa"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:background="#f5fffa"
                    android:paddingBottom="5dp"
                    android:text="         Templo de Artenisa"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:gravity="start" />

                <Button
                    android:id="@+id/btnhalicarnaso"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:background="#f5f5f5"
                    android:paddingBottom="5dp"
                    android:text="         El Mausoleo de Halicarnaso"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:gravity="start" />

                <Button
                    android:id="@+id/btngiza"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:background="#f5fffa"
                    android:paddingBottom="5dp"
                    android:text="         Pirámides de Giza"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:gravity="start" />

                <Button
                    android:id="@+id/btnzeus"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:background="#f5f5f5"
                    android:paddingBottom="5dp"
                    android:text="         La estatua de Zeus"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:gravity="start" />

                <Button
                    android:id="@+id/btnbabilonia"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:background="#f5fffa"
                    android:paddingBottom="5dp"
                    android:text="         Los jardines de Babilonia"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    android:gravity="start" />


                <Button
                    android:id="@+id/btnrodas"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:background="#f5fffa"
                    android:paddingBottom="5dp"
                    android:text="         El coloso de Rodas"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"

                    android:textSize="15dp"
                    android:gravity="start" />
                <Button
                    android:id="@+id/btnalejandria"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:background="#f5fffa"
                    android:paddingBottom="5dp"
                    android:text="         Faro de Alejandría"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"

                    android:textSize="15dp"
                    android:gravity="start" />
                <Button
                    android:id="@+id/btnmapa"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1dp"
                    android:background="#f5f5f5"
                    android:gravity="start"
                    android:paddingBottom="5dp"
                    android:text="         Ir Mapa"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="15dp" />




            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>